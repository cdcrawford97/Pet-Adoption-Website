<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="/stylesheets/registerAndLogin.css">
    <link rel="stylesheet" href="/stylesheets/alertMessages.css">
    <!-- Icon Links -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <title>Register</title>
</head>
<body>
    <nav>
        <%- include('./partials/navbar') %>
    </nav>

    <section>
        <div class="register-container">
            <form id="register-form" method="POST" action="/users/register" >
                <!--Register Title-->
                <div id="form-title">
                    <i style="font-size: 40px; margin-bottom:5px; margin-right: 15px;" class="fas fa-user-plus"></i>
                    <h1>Register</h1>
                </div>
                <!--Validation Messages-->
                <% include ./partials/messages %>
                <!-- Account Type -->
                <p id="account-type">Account Type</p>
                <div id="account-type-wrapper">
                    <label>
                        <input type="radio" name="seller" checked value="false" />
                        <span>Buyer Account</span>
                    </label>
                    <label>
                        <input type="radio" name="seller" value="true" />
                        <span>Seller Account</span>
                    </label>
                </div>
                <!-- Name -->
                <label class="main-labels" for="name">Name</label>
                <input 
                    required type="text" 
                    placeholder="Enter Name" 
                    id="name" name="name" 
                    class="boxes"
                    value="<%= typeof name != 'undefined' ? name : '' %>"
                />
                <!-- Email -->
                <label class="main-labels" for="email">Email</label>
                <input 
                    required 
                    type="email" 
                    placeholder="Enter Email" 
                    id="email" name="email" 
                    class="boxes" 
                    value="<%= typeof email != 'undefined' ? email : '' %>"
                />
                <!-- Password -->
                <label class="main-labels" for="password">Password</label>
                <input 
                    required type="password" 
                    placeholder="Create Password" 
                    id="password" 
                    name="password" 
                    class="boxes"
                    value="<%= typeof password != 'undefined' ? password : '' %>"
                />
                <!-- Confirm Password -->
                <label class="main-labels" for="password2">Confirm Password</label>
                <input 
                    required 
                    type="password" 
                    placeholder="Confirm Password" 
                    id="password2" 
                    name="password2" 
                    class="boxes" 
                    value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
                <!-- Submit Button -->
                <div id="submit-btn">
                    <input type="submit" value="Register" class="submit">
                </div>
                <p style="text-align: center;"> Have An Account? <a href='/users/login'>Login</a></p>
            </form>
        </div>
    </section>
    
    <footer>
        <%- include('./partials/footer') %>
    </footer>

    <script type="text/javascript" src="/javascripts/main.js"></script>
</body>
</html>