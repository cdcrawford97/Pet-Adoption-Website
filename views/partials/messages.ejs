<% if(typeof errors != 'undefined') { %>
    <% errors.forEach(function(error) { %>
        <div class="alert alert-warning">
            <%= error.msg %>
        </div>
    <% }); %>
<% } %>

<!-- Sucess Message -->
<% if(success_msg != '') { %>
    <div class="alert alert-success">
        <%= success_msg %>
    </div>
<% } %>

<!-- Error Message -->
<% if(error_msg != '') { %>
    <div class="alert alert-warning">
        <%= error_msg %>
    </div>
<% } %>

<% if(error != '') { %>
    <div class="alert alert-warning">
        <%= error %>
    </div>
<% } %>